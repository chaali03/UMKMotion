---
// Layout stabilizer to prevent CLS
---

<style>
  /* Prevent layout shifts with proper sizing */
  .hero-reveal {
    min-height: 1px;
    transition: opacity 0.6s ease, transform 0.6s ease;
    will-change: opacity, transform;
  }
  
  .hero-reveal:not(.show) {
    opacity: 0;
    transform: translateY(20px);
  }
  
  .hero-reveal.show {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Reserve space for images to prevent layout shift */
  .image-container {
    aspect-ratio: attr(width) / attr(height);
    background-color: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Prevent font loading shifts */
  .font-loading {
    font-display: swap;
    font-variation-settings: 'wght' 400;
  }
  
  /* Stabilize grid layouts */
  .grid-stable {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }
  
  /* Prevent button size shifts */
  .button-stable {
    min-width: 120px;
    min-height: 44px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
</style>

<script>
  // Intersection Observer for reveal animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const element = entry.target as HTMLElement;
        const delay = element.dataset.delay || '0s';
        
        setTimeout(() => {
          element.classList.add('show');
        }, parseFloat(delay) * 1000);
        
        observer.unobserve(element);
      }
    });
  }, observerOptions);
  
  // Observe all hero-reveal elements
  document.addEventListener('DOMContentLoaded', () => {
    const revealElements = document.querySelectorAll('[data-hero-reveal]');
    revealElements.forEach(el => observer.observe(el));
  });
</script>

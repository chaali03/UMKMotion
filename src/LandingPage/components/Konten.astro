---
import KontenSection from './konten/Konten.tsx';
---

<!-- Add a container with proper padding and max-width for better layout control -->
<div class="w-full bg-gradient-to-b from-white to-blue-50">
  <KontenSection client:visible />
</div>

<!-- Add some global styles if needed -->
<style>
  /* Smooth scrolling for better UX */
  html {
    scroll-behavior: smooth;
  }
  
  /* Animation for better visual feedback */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }
</style>
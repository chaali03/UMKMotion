---
import CircularGallery from "../../components/CircularGallery.jsx";

const items = [
  { image: '/asset/umkm/umkm1.png', text: 'UMKM 1' },
  { image: '/asset/umkm/umkm2.jpg', text: 'UMKM 2' },
  { image: '/asset/umkm/umkm3.jpeg', text: 'UMKM 3' },
  { image: '/asset/umkm/umkm4.jpeg', text: 'UMKM 4' },
  { image: '/asset/umkm/umkm5.jpg', text: 'UMKM 5' },
  { image: '/asset/umkm/umkm6.jpg', text: 'UMKM 6' },
];
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UMKMotion</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>

<section class="hero">
  <div class="hero-inner">
    <div class="hero-text">
      <h1 class="headline animate-in">
        <span class="accent">Scale</span>
        <span class="rest">without limits</span>
      </h1>
      <p class="kicker animate-in">
        Contra helps thousands of companies scale their flexible teams.
        <br class="br-md" />
        Grow, manage and pay your shared network of freelancers and contractors,
        all in one place.
      </p>
      <div class="cta animate-in">
        <a href="/daftar" class="btn btn-primary">Get started</a>
        <a href="#etalase" class="btn btn-ghost">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="margin-right:8px">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
            <path d="M10 8l6 4-6 4V8z" fill="currentColor"/>
          </svg>
          Watch
        </a>
      </div>
    </div>
    <CircularGallery client:load items={items} bend={8} className="animate-in" />
  </div>
</section>

<style>
  .hero {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .hero-inner {
    width: 100%;
    height: 100vh; /* full height for maximum downward */
    min-height: 100svh; /* better mobile viewport height */
    position: relative;
  }
  .hero-bg { 
    position: absolute; 
    inset: 0; 
    z-index: 1; 
    pointer-events: none;
  }
  .hero-particles { 
    width: 100%; 
    height: 100%; 
    opacity: 0.5; 
    filter: saturate(110%) contrast(105%);
  }
  
  /* Animation classes */
  .animate-in {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.8s cubic-bezier(0.25, 0.8, 0.25, 1), 
                transform 0.8s cubic-bezier(0.25, 0.8, 0.25, 1);
  }
  .animate-in.show {
    opacity: 1;
    transform: translateY(0);
  }
  /* Stagger delays for sequential animation */
  .headline.animate-in {
    transition-delay: 0.2s;
  }
  .kicker.animate-in {
    transition-delay: 0.4s;
  }
  .cta.animate-in {
    transition-delay: 0.6s;
  }
  .circular-gallery.animate-in {
    transition-delay: 0.8s;
    transform: translateY(60px) rotateX(25deg) scale(0.8);
    opacity: 0;
    filter: blur(8px);
    transition: all 1.2s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  .circular-gallery.animate-in.show {
    transform: translateY(0) rotateX(0deg) scale(1);
    opacity: 1;
    filter: blur(0px);
  }
  
  /* Unique staggered animation for gallery items */
  .circular-gallery.animate-in.show canvas {
    animation: galleryReveal 1.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.3s both;
  }
  
  /* Add floating particles effect */
  .circular-gallery.animate-in::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle at 30% 70%, rgba(0,17,81,0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 30%, rgba(253,87,1,0.08) 0%, transparent 50%);
    border-radius: 20px;
    opacity: 0;
    z-index: -1;
    transition: opacity 1s ease 1.2s;
  }
  
  .circular-gallery.animate-in.show::before {
    opacity: 1;
  }
  
  @keyframes galleryReveal {
    0% {
      transform: scale(0.6) rotateY(45deg);
      opacity: 0;
      filter: brightness(0.3) contrast(1.5);
    }
    30% {
      transform: scale(0.85) rotateY(15deg);
      opacity: 0.7;
      filter: brightness(0.7) contrast(1.2);
    }
    70% {
      transform: scale(1.05) rotateY(-5deg);
      opacity: 0.9;
      filter: brightness(1.1) contrast(1.1);
    }
    100% {
      transform: scale(1) rotateY(0deg);
      opacity: 1;
      filter: brightness(1) contrast(1);
    }
  }
  
  .hero-text {
    position: absolute;
    top: 26%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    width: min(1200px, 95vw);
    z-index: 10;
    padding: 1rem;
  }
  /* Ensure SplitText blocks stack vertically on desktop (override inline styles) */
  .hero-text .split-parent { display: block !important; width: 100%; margin-left: auto; margin-right: auto; }
  .hero-text .headline { margin-bottom: 12px; }
  .hero-text .kicker { margin-top: 10px; }
  /* Safe spacing so gallery doesn't collide with text */
  .hero .circular-gallery { margin-top: 6vh; }
  .headline { 
    font-size: clamp(2.8rem, 7.2vw, 6rem); 
    font-weight: 900; 
    line-height: 1.05; 
    margin: 0; 
    font-family: 'Inter', sans-serif; 
    letter-spacing: -0.02em;
    display: flex;
    gap: 12px;
    justify-content: center;
    align-items: baseline;
    flex-wrap: wrap;
  }
  .headline .accent {
    /* Brand blue â†’ orange gradient */
    background: linear-gradient(90deg, #001151 0%, #FD5701 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 14px rgba(0, 17, 81, 0.18), 0 0 18px rgba(253, 87, 1, 0.18);
  }
  .headline .rest { color: #121212; }
  .headline-1 { margin-bottom: 4px; }
  .headline-2 { margin-top: 0; }
  .kicker { 
    font-size: clamp(1rem, 2vw, 0.98rem); 
    font-weight: 500;
    color: #6b7280; 
    margin-top: 12px; 
    line-height: 1.9;
    max-width: 550px;
    margin-left: auto;
    margin-right: auto;
  }
  .kicker .br-md { display: none; }
  @media (min-width: 768px) { .kicker .br-md { display: inline; } }
  .cta { 
    display: flex; 
    gap: 12px; 
    justify-content: center; 
    margin-top: 16px; 
    flex-wrap: wrap;
  }
  .btn { 
    display: inline-flex; 
    align-items: center; 
    justify-content: center; 
    height: 46px; 
    padding: 0 20px; 
    border-radius: 12px; 
    font-weight: 800; 
    letter-spacing: .1px; 
    text-decoration: none; 
    transition: transform .18s ease, box-shadow .25s ease, background-color .25s ease, color .2s ease; 
    font-size: clamp(0.95rem, 1.6vw, 1.05rem);
  }
  .btn-primary { 
    background: #FD5701; 
    color: #fff; 
    box-shadow: 0 10px 26px rgba(253,87,1,.32), 0 2px 8px rgba(0,0,0,.10); 
  }
  .btn-primary:hover { 
    transform: translateY(-1px); 
    filter: saturate(1.06); 
  }
  .btn-ghost { 
    background: #ffffff; /* white */
    color: #0f172a; /* slate-900 */
    border: 1px solid #e5e7eb; /* slate-200 stroke */
    box-shadow: 0 2px 8px rgba(15,23,42,.04);
  }
  .btn-ghost:hover { 
    background: #ffffff; /* keep white */
    border-color: #d1d5db; /* slate-300 */
    box-shadow: 0 4px 12px rgba(15,23,42,.08);
  }
  /* Responsive adjustments for smaller frames */
  @media (max-width: 768px) {
    .hero-inner {
      height: 100vh;
      min-height: 100svh;
    }
    .hero-text { top: 28%; width: min(560px, 90vw); padding: 0.5rem; }
    .hero .circular-gallery { margin-top: 8vh; }
    .headline { font-size: clamp(1.35rem, 3.9vw, 2.1rem); line-height: 1.1; margin-bottom: 6px; }
    .subhead { font-size: clamp(0.82rem, 2vw, 0.98rem); margin-top: 6px; line-height: 1.26; }
    .kicker { font-size: clamp(0.7rem, 1.8vw, 0.88rem); margin-top: 4px; line-height: 1.36; }
    .cta { gap: 6px; margin-top: 8px; flex-wrap: wrap; }
    .btn { height: 34px; padding: 0 10px; border-radius: 10px; font-size: clamp(0.76rem, 1.8vw, 0.86rem); }
  }
  
  @media (max-width: 480px) {
    .hero-inner {
      height: 100vh;
      min-height: 100svh;
    }
    .hero-text { top: 26%; width: 88vw; padding: 0.25rem; }
    .hero .circular-gallery { margin-top: 6vh; }
    .hero-text .headline { font-size: clamp(1.05rem, 5vw, 1.4rem) !important; line-height: 1.12; margin-bottom: 6px; }
    .hero-text .headline-1 { font-size: clamp(1rem, 4.8vw, 1.3rem) !important; }
    .hero-text .headline-2 { font-size: clamp(0.95rem, 4.5vw, 1.2rem) !important; }
    .subhead { font-size: clamp(0.7rem, 2.8vw, 0.88rem); line-height: 1.34; margin-top: 6px; }
    .kicker { font-size: clamp(0.6rem, 2.4vw, 0.76rem); line-height: 1.38; margin-top: 4px; }
    .cta { flex-direction: column; align-items: stretch; gap: 6px; margin-top: 8px; }
    .btn { width: 100%; height: 30px; padding: 0 10px; font-weight: 700; font-size: clamp(0.7rem, 2.4vw, 0.8rem); }
    .btn-primary { box-shadow: 0 6px 16px rgba(253,87,1,.22), 0 2px 6px rgba(0,0,0,.08); }
  }
  
  @media (max-width: 360px) {
    .hero-text { top: 24%; width: 85vw; padding: 0.125rem; }
    .hero-text .headline { font-size: clamp(0.94rem, 6vw, 1.28rem) !important; line-height: 1.18; margin-bottom: 4px; }
    .hero-text .headline-1 { font-size: clamp(0.92rem, 5.8vw, 1.18rem) !important; }
    .hero-text .headline-2 { font-size: clamp(0.88rem, 5.6vw, 1.14rem) !important; }
    .subhead { font-size: clamp(0.66rem, 3.4vw, 0.86rem); line-height: 1.32; margin-top: 4px; }
    .kicker { font-size: clamp(0.58rem, 3vw, 0.72rem); line-height: 1.42; margin-top: 3px; }
    .cta { margin-top: 8px; gap: 4px; }
    .btn { height: 28px; padding: 0 8px; font-size: clamp(0.68rem, 3vw, 0.78rem); }
  }
  
  @media (max-width: 320px) {
    .hero-text { top: 22%; width: 82vw; }
    .hero .circular-gallery { margin-top: 14vh; }
    .headline { font-size: clamp(0.98rem, 6.2vw, 1.36rem); }
    .subhead { font-size: clamp(0.66rem, 3.4vw, 0.86rem); }
    .kicker { font-size: clamp(0.58rem, 3vw, 0.72rem); }
    .btn { height: 28px; font-size: clamp(0.68rem, 3vw, 0.78rem); }
  }

  /* Ultra small devices (<=300px) */
  @media (max-width: 300px) {
    .hero-text { top: 22%; width: 82vw; }
    .headline { font-size: clamp(0.92rem, 6.8vw, 1.24rem); }
    .kicker { font-size: clamp(0.54rem, 3.6vw, 0.68rem); }
    .btn { height: 26px; padding: 0 8px; font-size: clamp(0.64rem, 3.2vw, 0.74rem); }
  }

  /* Extra ultra small devices (<=280px) */
  @media (max-width: 280px) {
    .hero-text { top: 22%; width: 82vw; }
    .headline { font-size: clamp(0.88rem, 7.2vw, 1.18rem); }
    .kicker { font-size: clamp(0.5rem, 3.2vw, 0.64rem); }
    .btn { height: 24px; padding: 0 6px; font-size: clamp(0.6rem, 3vw, 0.7rem); }
  }
  
</style>

<script>
  // Intersection Observer for entrance animations
  const observeAnimations = () => {
    const animateElements = document.querySelectorAll('.animate-in');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('show');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    animateElements.forEach((el) => {
      observer.observe(el);
    });
  };

  // Initialize animations when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', observeAnimations);
  } else {
    observeAnimations();
  }
</script>

</body>
</html>

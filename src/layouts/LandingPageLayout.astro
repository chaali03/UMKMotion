  <body class={showIntro ? 'intro-lock' : ''} style="background:#ffffff; color-scheme: light;">
    <script is:inline>
      try {
        const root = document.documentElement;
        root.classList.remove('dark');
        root.dataset.theme = 'light';
        root.style.colorScheme = 'light';
      } catch {}
    </script>

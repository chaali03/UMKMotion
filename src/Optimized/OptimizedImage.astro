---
import { optimizeUnsplashImage, generateResponsiveSrcSet } from '../utils/image-optimizer';

export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  quality?: number;
  format?: 'webp' | 'avif' | 'jpg' | 'png';
  loading?: 'lazy' | 'eager';
  class?: string;
  sizes?: string;
}

const {
  src,
  alt,
  width = 400,
  height = 300,
  quality = 80,
  format = 'webp',
  loading = 'lazy',
  class: className = '',
  sizes = '(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw'
} = Astro.props;

// Optimize the main image
const optimizedSrc = optimizeUnsplashImage(src, { width, height, quality, format });

// Generate responsive srcset
const srcSet = generateResponsiveSrcSet(src);
---

<img
  src={optimizedSrc}
  srcset={srcSet}
  sizes={sizes}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  decoding="async"
  class={className}
  style="aspect-ratio: auto; object-fit: cover;"
/>

            bannerPrevSlide();
            bannerStopAutoPlay();
            bannerStartAutoPlay();
          });
        }

        if (bannerCarouselNext) {
          bannerCarouselNext.addEventListener('click', function() {
            bannerNextSlide();
            bannerStopAutoPlay();
            bannerStartAutoPlay();
          });
        }

        // Dot navigation
        for (var i = 0; i < bannerDots.length; i++) {
          bannerDots[i].addEventListener('click', function() {
            var index = parseInt(this.getAttribute('data-index'));
            bannerShowSlide(index);
            bannerStopAutoPlay();
            bannerStartAutoPlay();
          });
        }

        // Start auto play
        bannerStartAutoPlay();


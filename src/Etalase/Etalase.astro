  <script>
  // @ts-nocheck
  document.addEventListener('DOMContentLoaded', function() {
    var categorySection = document.getElementById('categorySection');
    var scrollPrevBtn = document.getElementById('scrollPrev');
    var scrollNextBtn = document.getElementById('scrollNext');
    var categoryButtons = document.querySelectorAll('.category-buttons');

    if (!categorySection) return;

    // === SCROLL BUTTON HANDLER  ===
    function updateScrollButtons() {
      if (!scrollPrevBtn || !scrollNextBtn) return;
      var hasScroll = categorySection.scrollWidth > categorySection.clientWidth;
      var isAtStart = categorySection.scrollLeft === 0;
      var isAtEnd = categorySection.scrollLeft + categorySection.clientWidth >= categorySection.scrollWidth - 10;
      if ('disabled' in scrollPrevBtn) scrollPrevBtn.disabled = !hasScroll || isAtStart;
      if ('disabled' in scrollNextBtn) scrollNextBtn.disabled = !hasScroll || isAtEnd;
    }

    if (scrollPrevBtn) {
      scrollPrevBtn.addEventListener('click', function() {
        categorySection.scrollBy({ left: -300, behavior: 'smooth' });
        setTimeout(updateScrollButtons, 300);
      });
    }

    if (scrollNextBtn) {
      scrollNextBtn.addEventListener('click', function() {
        categorySection.scrollBy({ left: 300, behavior: 'smooth' });
        setTimeout(updateScrollButtons, 300);
      });
    }

    // === DRAG / SWIPE SCROLL FEATURE ===
    var isDown = false;
    var startX;
    var scrollLeft;

    categorySection.addEventListener('mousedown', function(e) {
      isDown = true;
      categorySection.classList.add('dragging');
      startX = e.pageX - categorySection.offsetLeft;
      scrollLeft = categorySection.scrollLeft;
    });

    categorySection.addEventListener('mouseleave', function() {
      isDown = false;
      categorySection.classList.remove('dragging');
    });

    categorySection.addEventListener('mouseup', function() {
      isDown = false;
      categorySection.classList.remove('dragging');
    });

    categorySection.addEventListener('mousemove', function(e) {
      if (!isDown) return;
      e.preventDefault();
      var x = e.pageX - categorySection.offsetLeft;
      var walk = (x - startX) * 1.5; // kecepatan scroll
      categorySection.scrollLeft = scrollLeft - walk;
    });

    // === TOUCH SCROLL (mobile) ===
    // ga perlu apa-apa tambahan, karena native browser udah bisa swipe
    categorySection.style.overflowX = "auto";
    categorySection.style.scrollBehavior = "smooth";

    // === CATEGORY BUTTON ACTIVE STATE ===
    for (var i = 0; i < categoryButtons.length; i++) {
      categoryButtons[i].addEventListener('click', function(e) {
        e.preventDefault();
        for (var j = 0; j < categoryButtons.length; j++) {
          categoryButtons[j].classList.remove('active');
        }
        this.classList.add('active');
        var category = this.getAttribute('data-category');
        var event = new CustomEvent('categorySelected', {
          detail: { category: category, element: this }
        });
        document.dispatchEvent(event);
      });
    }

    updateScrollButtons();
    window.addEventListener('resize', updateScrollButtons);
  });

  var carouselTrack = document.getElementById('carouselTrack');
    var carouselPrev = document.getElementById('carouselPrev');
    var carouselNext = document.getElementById('carouselNext');
    var carouselDots = document.getElementById('carouselDots');
    
    if (carouselTrack) {
      var slides = carouselTrack.querySelectorAll('.carousel-slide');
      var currentSlide = 0;
      var autoPlayInterval;

      // Create dots
      for (var i = 0; i < slides.length; i++) {
        var dot = document.createElement('div');
        dot.className = 'carousel-dot';
        if (i === 0) dot.classList.add('active');
        dot.setAttribute('data-index', i);
        carouselDots.appendChild(dot);
      }

      var dots = carouselDots.querySelectorAll('.carousel-dot');

      function showSlide(index) {
        if (index >= slides.length) index = 0;
        if (index < 0) index = slides.length - 1;
        
        for (var i = 0; i < slides.length; i++) {
          slides[i].classList.remove('active');
          dots[i].classList.remove('active');
        }
        
        slides[index].classList.add('active');
        dots[index].classList.add('active');
        currentSlide = index;
      }

      function nextSlide() {
        showSlide(currentSlide + 1);
      }

      function prevSlide() {
        showSlide(currentSlide - 1);
      }

      // Auto play
      function startAutoPlay() {
        autoPlayInterval = setInterval(nextSlide, 4000);
      }

      function stopAutoPlay() {
        clearInterval(autoPlayInterval);
      }

      if (carouselPrev) {
        carouselPrev.addEventListener('click', function() {
          prevSlide();
          stopAutoPlay();
          startAutoPlay();
        });
      }

      if (carouselNext) {
        carouselNext.addEventListener('click', function() {
          nextSlide();
          stopAutoPlay();
          startAutoPlay();
        });
      }

      // Dot navigation
      for (var i = 0; i < dots.length; i++) {
        dots[i].addEventListener('click', function() {
          var index = parseInt(this.getAttribute('data-index'));
          showSlide(index);
          stopAutoPlay();
          startAutoPlay();
        });
      }

      // Start auto play
      startAutoPlay();

      // Pause on hover
      carouselTrack.addEventListener('mouseenter', stopAutoPlay);
      carouselTrack.addEventListener('mouseleave', startAutoPlay);
    }
  

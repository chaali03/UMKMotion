/* ========================================
   MOBILE HEADER
   ======================================== */
.mobile-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.2rem;
  background: #fff;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 700;
}

.logo-icon {
  color: #ff6b35;
  font-size: 1.4rem;
}

.logo-text {
  color: #ff6b35;
  font-size: 1.1rem;
}

.menu-btn {
  background: none;
  border: none;
  cursor: pointer;
  color: #555;
  padding: 0.5rem;
}

/* ========================================
   MOBILE HERO BANNER
   ======================================== */
.mobile-hero {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 20px;
  margin-bottom: 2rem;
}

.hero-image {
  width: 100%;
  height: 45vh;
  min-height: 300px;
  position: relative;
}

.hero-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center top;
}

/* GRADIENT GELAP DI BAWAH */
.hero-image::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70%;
  background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.7) 60%, rgba(0,0,0,0.95) 100%);
  pointer-events: none;
}

/* TEKS & TOMBOL */
.hero-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 2rem 1.5rem;
  color: #fff;
  text-align: center;
  z-index: 2;
}

.hero-title {
  font-size: clamp(2rem, 7vw, 2.8rem);
  font-weight: 900;
  margin-bottom: 0.8rem;
  line-height: 1.1;
  text-shadow: 0 2px 8px rgba(0,0,0,0.7);
}

.hero-desc {
  font-size: clamp(0.95rem, 3.5vw, 1.1rem);
  margin-bottom: 1.5rem;
  line-height: 1.5;
  opacity: 0.95;
  max-width: 90%;
  margin-left: auto;
  margin-right: auto;
}

.hero-btn {
  display: inline-block;
  background: #ff6b35;
  color: #fff;
  font-weight: 700;
  font-size: 1rem;
  padding: 0.9rem 2.2rem;
  border-radius: 3rem;
  text-decoration: none;
  box-shadow: 0 6px 20px rgba(255,107,53,0.4);
  transition: all 0.3s ease;
  border: 2px solid rgba(255,255,255,0.2);
}

.hero-btn:hover {
  background: #e55a2b;
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(255,107,53,0.5);
  border-color: #fff;
}

/* ========================================
   RESPONSIVE (EXTRA SMALL)
   ======================================== */
@media (max-width: 375px) {
  .hero-image { height: 40vh; }
  .hero-content { padding: 1.5rem 1rem; }
  .hero-title { font-size: 1.9rem; }
  .hero-btn { padding: 0.8rem 1.8rem; font-size: 0.95rem; }
  .search-bar { padding: 0.8rem 1rem; }
  .search-input input { padding: 0.75rem 0.9rem 0.75rem 2.6rem; font-size: 0.95rem; }

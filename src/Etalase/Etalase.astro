      if (bannerCarouselTrack) {
        var bannerSlides = bannerCarouselTrack.querySelectorAll('.banner-carousel-slide');
        var bannerCurrentSlide = 0;
        var bannerAutoPlayInterval;

        // Create dots
        for (var i = 0; i < bannerSlides.length; i++) {
          var dot = document.createElement('div');
          dot.className = 'banner-carousel-dot';
          if (i === 0) dot.classList.add('active');
          dot.setAttribute('data-index', i);
          bannerCarouselDots.appendChild(dot);
        }

        var bannerDots = bannerCarouselDots.querySelectorAll('.banner-carousel-dot');

        function bannerShowSlide(index) {
          if (index >= bannerSlides.length) index = 0;
          if (index < 0) index = bannerSlides.length - 1;
          
          for (var i = 0; i < bannerSlides.length; i++) {
            bannerSlides[i].classList.remove('active');
            bannerDots[i].classList.remove('active');
          }
          
          bannerSlides[index].classList.add('active');
          bannerDots[index].classList.add('active');
          bannerCurrentSlide = index;
        }

        function bannerNextSlide() {
          bannerShowSlide(bannerCurrentSlide + 1);
        }

        function bannerPrevSlide() {
          bannerShowSlide(bannerCurrentSlide - 1);

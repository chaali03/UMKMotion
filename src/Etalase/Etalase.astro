        margin-bottom: 16px;
        font-weight: 600;
        font-size: 1.1rem;
        color: #333;
      }

      /* Added wrapper for horizontal scroll with navigation buttons */
      .category-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        position: relative;
      }

      /* Horizontal scroll container */
      .category-section {
        display: flex;
        gap: 14px;
        overflow-x: auto;
        overflow-y: hidden;
        scroll-behavior: smooth;
        padding: 8px 0;
        flex: 1;
        min-width: 0;
        scrollbar-width: thin;
        scrollbar-color: #d3d3d3 #f0f0f0;
      }

      /* Custom scrollbar styling */
      .category-section::-webkit-scrollbar {
        height: 6px;
      }

      .category-section::-webkit-scrollbar-track {
        background: #f0f0f0;
        border-radius: 10px;
      }

      .category-section::-webkit-scrollbar-thumb {
        background: #d3d3d3;
        border-radius: 10px;
        transition: background 0.3s;
      }

      .category-section::-webkit-scrollbar-thumb:hover {
        background: #999;
      }
      
      #categorySection {
        overflow-x: auto;
        scroll-behavior: smooth;
        cursor: grab;
      }

      #categorySection.dragging {
        cursor: grabbing;
      }


      /* Category buttons - now fully clickable button elements */

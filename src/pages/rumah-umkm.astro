---
import Layout from '../layouts/LandingPageLayout.astro';
import RumahUMKM from '../RumahUMKM/RumahUMKM';
---

<Layout title="Rumah UMKM - Temukan UMKM Terdekat">
  <div class="min-h-screen bg-gradient-to-br from-[#1f1305] via-[#130a02] to-[#2a1606]">
    <RumahUMKM client:only="react"  />
  </div>
</Layout>

<style is:global>
  /* Leaflet custom styles */
  .leaflet-container {
    font-family: inherit;
  }
  
  .custom-marker {
    background: transparent !important;
    border: none !important;
  }
  
  .leaflet-popup-content-wrapper {
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
    background: #1a1208;
    color: #fde68a; /* amber-200 */
    border: 1px solid rgba(251, 146, 60, 0.25); /* orange-400 */
  }
  
  .leaflet-popup-tip {
    display: none;
  }
  
  /* Scrollbar styling */
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1a1208;
    border-radius: 10px;
  }
  
  ::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, #fb923c, #f59e0b);
    border-radius: 10px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, #f97316, #d97706);
  }
</style>

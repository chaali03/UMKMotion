<style>
  :root {
    --brand-blue: #001151;
    --brand-orange: #FD5701;
  }

  header.nav {
    position: sticky;
    top: 0;
    z-index: 60;
    background: transparent;
    --logo-h: clamp(48px, 9vw, 88px);
    --logo-shift: 10px;
    --logo-scale: 1.25;
    transition: transform .4s cubic-bezier(.25,.8,.25,1), background-color .35s ease, box-shadow .35s ease, backdrop-filter .35s ease, opacity .2s ease;
    isolation: isolate;
    margin: 0;
    padding: 0;
  }
  header.nav.scrolled {
    background: linear-gradient(180deg, rgba(255,255,255,.85) 0%, rgba(255,255,255,.75) 100%);
    backdrop-filter: blur(12px) saturate(160%);
    -webkit-backdrop-filter: blur(12px) saturate(160%);
    box-shadow: 0 8px 32px rgba(0,17,81,.08), 0 2px 8px rgba(253,87,1,.04);
  }
  header.nav.hide { transform: translateY(calc(-1 * var(--logo-h) - 28px)); }

  .container {
    max-width: 1200px;
    margin-inline: auto;
    padding: 12px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: space-between;
    width: 100%;
  }

  .brand { display: inline-flex; align-items: center; color: var(--brand-blue); font-weight: 800; font-size: 20px; text-decoration: none; white-space: nowrap; }
  .brand img { height: var(--logo-h); width: auto; display: block; transform: translateY(var(--logo-shift)) scale(var(--logo-scale)); transition: transform .3s cubic-bezier(.34,1.56,.64,1), filter .3s ease; }
  .brand:hover img { transform: translateY(var(--logo-shift)) scale(calc(var(--logo-scale) * 1.03)) rotate(-1deg); filter: drop-shadow(0 6px 16px rgba(0,17,81,.12)) drop-shadow(0 2px 8px rgba(253,87,1,.08)); }

  nav.primary { flex: 1; display: flex; justify-content: center; }
  ul.menu { list-style: none; display: flex; align-items: center; gap: 20px; margin: 0; padding: 0; }
  .menu a { color: var(--brand-blue); text-decoration: none; font-weight: 600; font-size: 15px; display: inline-flex; align-items: center; gap: 7px; padding: 10px 12px; line-height: 1; border-radius: 12px; transition: color .25s cubic-bezier(.34,1.56,.64,1), background-color .3s ease, box-shadow .3s ease, transform .25s ease; position: relative; }
  .menu a:not(.btn):hover { color: #000b3a; transform: translateY(-2px); }
  .menu a.active { background: linear-gradient(135deg, rgba(253,87,1,0.14), rgba(253,87,1,0.10)); color: var(--brand-orange); box-shadow: 0 4px 12px rgba(253,87,1,0.18), 0 2px 6px rgba(0,17,81,0.06); transform: translateY(-1px); }

  .actions { margin-left: 16px; display: flex; align-items: center; gap: 10px; flex: 0 0 200px; justify-content: flex-end; }
  .icon-btn { display: inline-flex; align-items: center; gap: 8px; height: 40px; padding: 0 14px; border-radius: 12px; color: var(--brand-blue); background: rgba(0,17,81,.06); box-shadow: inset 0 0 0 1px rgba(0,17,81,.10); font-weight: 700; font-size: 14px; text-decoration: none; transition: transform .18s cubic-bezier(.34,1.56,.64,1), box-shadow .25s ease, background-color .25s ease, color .2s ease; }
  .icon-btn:hover { background: rgba(0,17,81,.10); box-shadow: inset 0 0 0 1px rgba(0,17,81,.18); transform: translateY(-1px); }
  .icon-btn:active { transform: translateY(0) scale(.985); }
  .icon-btn svg { width: 18px; height: 18px; }

  .toggle { margin-left: auto; display: none; background: transparent; border: 0; padding: 8px; border-radius: 8px; color: var(--brand-blue); cursor: pointer; }
  .toggle svg { width: 28px; height: 28px; }

  @media (max-width: 1024px) { nav.primary, .actions { display: none; } .toggle { display: inline-flex; } }
  @media (max-width: 480px) { .container { padding: 8px 12px; gap: 8px; } .toggle { padding: 6px; } .toggle svg { width: 24px; height: 24px; } header.nav { --logo-h: clamp(32px, 12vw, 44px); } }

  /* Mobile menu */
  .mobile-menu-overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.5); backdrop-filter: blur(4px); z-index: 9998; opacity: 0; visibility: hidden; transition: all .3s ease; }
  .mobile-menu-overlay.active { opacity: 1; visibility: visible; }
  .mobile-menu-container { position: fixed; top: 0; right: -100%; width: 85%; max-width: 400px; height: 100%; background: #fff; box-shadow: -8px 0 32px rgba(0,0,0,.15); z-index: 9999; transition: right .4s cubic-bezier(0.34, 1.56, 0.64, 1); display: flex; flex-direction: column; }
  .mobile-menu-container.active { right: 0; }
  .mobile-menu-header { display: flex; align-items: center; justify-content: space-between; padding: 16px; border-bottom: 1px solid rgba(0,0,0,0.1); }
  .mobile-menu-content { padding: 16px; flex: 1; overflow-y: auto; }
  .mobile-menu-items { list-style: none; margin: 0; padding: 0; }
  .mobile-menu-item { margin-bottom: 16px; }
  .mobile-menu-link { color: var(--brand-blue); text-decoration: none; font-weight: 700; font-size: 18px; display: block; padding: 10px 12px; border-radius: 10px; }
  .mobile-menu-actions { padding: 16px; border-top: 1px solid rgba(0,0,0,0.1); }
  .mobile-profile { display: inline-flex; align-items: center; gap: 10px; height: 48px; width: 100%; border-radius: 14px; background: rgba(0,17,81,.06); font-weight: 800; justify-content: center; }
</style>

<header class="nav" id="home-nav">
  <div class="container">
    <a class="brand" href="/homepage">
      <img src="/LogoNavbar.png" alt="Brand Logo" loading="eager" decoding="async" />
    </a>

    <nav class="primary" aria-label="Primary Navigation">
      <ul class="menu">
        <li><a href="/homepage" class="active">Beranda</a></li>
        <li><a href="/etalase">Etalase</a></li>
        <li><a href="/rumah-umkm">Rumah UMKM</a></li>
        <li><a href="/konsultasi">Konsultasi</a></li>
        <li><a href="/komunitas">Komunitas</a></li>
      </ul>
    </nav>

    <div class="actions">
      <a class="icon-btn" href="/profil" aria-label="Profil">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
        <span>Profil</span>
      </a>
    </div>

    <button class="toggle" aria-label="Toggle mobile menu" id="homeNavToggle">
      <svg viewBox="0 0 24 24" aria-hidden="true">
        <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      </svg>
    </button>
  </div>
</header>

<div class="mobile-menu-overlay" id="homeMobileMenuOverlay"></div>
<div class="mobile-menu-container" id="homeMobileMenuContainer">
  <div class="mobile-menu-header">
    <a class="brand" href="/homepage">
      <img src="/LogoNavbar.png" alt="Brand Logo" style="height: 40px;" />
    </a>
    <button class="mobile-menu-close" id="homeMobileMenuClose" aria-label="Close menu">âœ•</button>
  </div>

  <div class="mobile-menu-content">
    <ul class="mobile-menu-items">
      <li class="mobile-menu-item"><a href="/homepage" class="mobile-menu-link">Beranda</a></li>
      <li class="mobile-menu-item"><a href="/etalase" class="mobile-menu-link">Etalase</a></li>
      <li class="mobile-menu-item"><a href="/rumah-umkm" class="mobile-menu-link">Rumah UMKM</a></li>
      <li class="mobile-menu-item"><a href="/konsultasi" class="mobile-menu-link">Konsultasi</a></li>
      <li class="mobile-menu-item"><a href="/komunitas" class="mobile-menu-link">Komunitas</a></li>
    </ul>
  </div>

  <div class="mobile-menu-actions">
    <a href="/profil" class="mobile-profile" aria-label="Profil">
      <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
      </svg>
      <span>Profil</span>
    </a>
  </div>
</div>

<script>
  // basic mobile menu handling specific to home navbar
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('homeNavToggle');
    const overlay = document.getElementById('homeMobileMenuOverlay');
    const closeBtn = document.getElementById('homeMobileMenuClose');
    const container = document.getElementById('homeMobileMenuContainer');

    const open = () => { container?.classList.add('active'); overlay?.classList.add('active'); document.body.style.overflow = 'hidden'; };
    const close = () => { container?.classList.remove('active'); overlay?.classList.remove('active'); document.body.style.overflow = ''; };

    toggle?.addEventListener('click', open);
    overlay?.addEventListener('click', close);
    closeBtn?.addEventListener('click', close);
    document.querySelectorAll('#homeMobileMenuContainer .mobile-menu-link').forEach((a) => a.addEventListener('click', close));
  });
</script>
